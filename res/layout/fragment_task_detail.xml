<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/home_item_bg"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="5dp" >

            <include
                android:id="@+id/fm_include_tv_task_0"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_1"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_2"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_3"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_4"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_5"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_6"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_7"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_8"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_9"
                layout="@layout/include_tv_two" />

            <include
                android:id="@+id/fm_include_tv_task_10"
                layout="@layout/include_tv_two" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/detail_bottom"
        android:gravity="end"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fm_include_tv_task_success"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/textview_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_check"
            android:drawablePadding="@dimen/container_padding_small"
            android:drawableStart="@drawable/ic_check"
            android:gravity="center_vertical"
            android:padding="@dimen/container_padding_small"
            android:text="@string/issue_detail_success" />
    </LinearLayout>

</LinearLayout>