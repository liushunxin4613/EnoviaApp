<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:ignore="ScrollViewCount" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 必填模块 -->

        <LinearLayout
            style="@style/activity_login_linear_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_kuang"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <include
                android:id="@+id/fg_ic_must_tv_et_0"
                layout="@layout/include_publish_edit" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_must_tv_et_1"
                layout="@layout/include_publish_edit" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_must_tv_et_2"
                layout="@layout/include_publish_edit" />
        </LinearLayout>

        <!-- 选填模块 -->

        <LinearLayout
            style="@style/activity_login_linear_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_kuang"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <include
                android:id="@+id/fg_ic_tv_sp_0"
                layout="@layout/include_spinner_tv" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_et_0"
                layout="@layout/include_publish_edit" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_et_1"
                layout="@layout/include_publish_edit" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_et_2"
                layout="@layout/include_publish_edit" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_0"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_1"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_2"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_tv_0"
                layout="@layout/include_publish_textview" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_3"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_4"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_5"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_6"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_tv_1"
                layout="@layout/include_publish_textview" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_7"
                layout="@layout/include_tv_two" />

            <include layout="@layout/include_view" />

            <include
                android:id="@+id/fg_ic_tv_two_8"
                layout="@layout/include_tv_two" />
        </LinearLayout>

        <!-- 文件模块 -->

        <LinearLayout
            style="@style/activity_login_linear_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_kuang"
            android:orientation="vertical"
            tools:ignore="UselessParent" >

            <include
                android:id="@+id/fg_ic_next_lv"
                layout="@layout/include_next_listview" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_fm_edit_issue"
            style="@style/mid_white_textstyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/container_padding_large"
            android:background="@drawable/button_blue_selector"
            android:text="@string/issue_edit_submit" />
    </LinearLayout>

</ScrollView>