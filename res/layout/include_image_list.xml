<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/base_blue_light"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/user_IV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/default_user"
        android:contentDescription="@string/image_string" >

        <ImageButton
            android:id="@+id/user_imgBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_user_selector"
            android:contentDescription="@string/image_string" />
    </RelativeLayout>

    <TextView
        android:id="@+id/user_name_TV"
        style="@style/mid_white_textstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_IV"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/user_IV"
        android:layout_toRightOf="@id/user_IV"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/user_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name_TV"
        android:layout_alignStart="@+id/user_name_TV"
        android:layout_below="@+id/user_name_TV"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/complie_edit"
        android:textColor="@drawable/text_white_selector"
        android:textSize="20sp"
        android:visibility="gone" />

</RelativeLayout>