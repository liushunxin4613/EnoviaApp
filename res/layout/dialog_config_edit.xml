<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_confirm_et_title"
        style="@style/dialog_black_textstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/dialog_title_bg"
        android:padding="@dimen/container_padding"
        android:visibility="gone" />

    <EditText
        android:id="@+id/dialog_confirm_et_msg"
        style="@style/mid_black_textstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:lineSpacingMultiplier="1.3"
        android:padding="@dimen/container_padding_large"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/container_padding" >

        <Button
            android:id="@+id/dialog_nevigative_et_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/radiu_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_left_selector" />

        <Button
            android:id="@+id/dialog_positive_et_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/radiu_button_height"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_right_selector" />
    </LinearLayout>

</LinearLayout>